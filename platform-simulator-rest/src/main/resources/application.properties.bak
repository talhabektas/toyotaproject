# REST Platform Simulator Konfigürasyon Dosyas?

# Server Yap?land?rmas?
server.port=8080
server.servlet.context-path=/

# Spring Yap?land?rmas?
spring.application.name=platform-simulator-rest

# Simülasyon Yap?land?rmas?
simulation.updateIntervalMs=8000
simulation.maxUpdates=-1        # -1 sonsuz güncelleme anlam?na gelir
simulation.minRateChange=-0.005  # Minimum de?i?im oran? (-%0.5)
simulation.maxRateChange=0.005   # Maksimum de?i?im oran? (%0.5)

# Actuator Yap?land?rmas?
management.endpoints.web.exposure.include=health,info,metrics
logging.level.root=INFO
logging.level.com.finansal=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%ncd
